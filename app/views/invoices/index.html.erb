<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>
<div class="row">
  <div class="pull-right range-query">
    <%= form_tag invoices_path, method: :get, class: 'form-inline' do %>
      <%= text_field_tag 'search[date_from]', @search.date_from, class: 'form-control' %>
      <%= text_field_tag 'search[date_to]', @search.date_to, class: 'form-control' %>
      <%= submit_tag 'Search', class: 'btn btn-default search-btn' %>
    <% end %>
  </div>
</div>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Company</th>
          <th>Tax</th>
          <th>Salesperson</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.date.strftime("%Y-%m-%d") %></td>
            <td><%= invoice.company %></td>
            <td><%= invoice.tax %></td>
            <td><%= invoice.employee_id %></td>
            <td><%= invoice.status_type %></td>
            <td><%= link_to 'Show', invoice, class: 'btn btn-default btn-xs' %></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-success btn-xs' %></td>
            <td><%= link_to 'Destroy', invoice, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %> 
      </tbody>
    </table> 
  </div>
</div>

<br>

